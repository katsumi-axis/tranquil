{
  "name": "tranquil",
  "version": "0.1.0",
  "description": "A TypeScript-based SQL linter and formatter that brings tranquility to your SQL code",
  "keywords": [
    "sql",
    "linter",
    "formatter",
    "typescript",
    "cli",
    "postgresql",
    "mysql",
    "sqlite",
    "bigquery"
  ],
  "license": "MIT",
  "author": "Furuta Katsumi",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tranquil": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run lint",
    "format": "biome format --write src tests",
    "format:check": "biome format src tests"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "node-sql-parser": "^4.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
